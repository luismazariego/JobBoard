@page
@model IEnumerable<JobBoard.App.Models.Job>
@{
    ViewData["Title"] = "Home";
}

<h2>Job Board</h2>

<p>
    <a asp-action="Create">Create new</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiresAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(job => item.JobTitle)
                </td>
                <td>
                    @Html.DisplayFor(job => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(job => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(job => item.ExpiresAt)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.JobId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.JobId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.JobId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

